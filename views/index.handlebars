<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3>Up for grabs!</h3>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

 
      <div class="col-sm-6">
         <h3>Devoured!</h3>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Now it's your time to choose the grub!</h2>

<div class="row">
  <div class="col-md-12 col-centered">
    <form action="/burgers" method="POST" style="text-align:center">
      <input type="text" id="name" name="burger_name" placeholder="Decisions..Decisions">
    <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>